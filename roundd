  <script>
    let scores = { blue: 0, red: 0, green: 0, yellow: 0 };

    function updateScore(color, value) {
      scores[color] += value;
      if (scores[color] < 0) scores[color] = 0;
      document.getElementById(color + 'Score').innerText = scores[color];
      sortScoreboard();
    }

    function sortScoreboard() {
      const scoreboard = document.getElementById('scoreboard');
      const houses = Array.from(scoreboard.querySelectorAll('.house'));
      houses.sort((a, b) => {
        const colorA = a.getAttribute('data-color');
        const colorB = b.getAttribute('data-color');
        return scores[colorB] - scores[colorA];
      });
      houses.forEach(house => scoreboard.appendChild(house));
    }
  </script>

